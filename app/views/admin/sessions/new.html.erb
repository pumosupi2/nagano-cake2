<div class="container">
  <div class="row">
    <h2>管理者ログイン</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class ="row ml-3">
    <label class="col-lg-3">メールアドレス</label>
    <div class="col-lg-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div><br />
  
  <div class="row ml-3">
    <label class="col-lg-3">パスワード</label>
    <div class="col-lg-3"><%= f.password_field :password, autocomplete: "current-password" %></div>
  </div>
   <div class="actions">
    <%= f.submit "Log in" %>
   </div>
 <% end %>
</div>

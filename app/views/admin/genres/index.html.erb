<div class='container px-5 px-sm-0'>
 <div class='row'>
  <!--左-->
  <div class='col-md-6'>
  <h4>ジャンル一覧・追加</h4>
  <br>
  <br>
  <!--ジャンル登録-->
  <div class="form-group">

  <table>
   <tbody>
    <%= form_with model: @genre,local:true, url: admin_genres_path, method: :post do |f| %>


      ジャンル名
      <%= f.text_field :name, class: 'form-control genre_name' %>
      <%= f.submit "新規登録",class: "btn btn-success" %>

      <% end %>

  <br>
  <br>
  <!--ジャンル一覧-->
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
      <th>ジャンル</th>
      <th colspan="6"></th>
      </tr>
    </thead>
    <tbody>

    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to '編集',edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success"%></td>
    </tr>
    <% end %>

    </tbody>
  </table>
  </div>
  </div>
  <!--右（空白）-->
  <div class='col-md-5 offset-md-1'>
  </div>
 </div>
</div>
<div class="container">
    <div class="row">
        <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
    </div>
    
    <%= form_with model:@customer, url: admin_customer_path(@customer), method: :patch do |f| %>
    <div class="form-group row">
     <div class="col-2">
       <%= f.label "氏名" %>
     </div>
     <div class="col-1 text-right">
       <p>(姓)</p>
     </div>
     <div class="col-3">
       <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" , placeholder: "山田" %>
     </div>
     <div class="col-1 text-right">
       <p>(名)</p>
     </div>
     <div class="col-3">
       <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" , placeholder: "太郎"%>
     </div>
   </div>   
     
   <div class="form-group row">
     <div class="col-2">
       <%= f.label "フリガナ" %>
     </div>
     <div class="col-1 text-right text">
       <p>(セイ)</p>
     </div>
     <div class="col-3">
       <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" , placeholder: "ヤマダ" %>
     </div>
     <div class="col-1 text-right text">
       <p>(メイ)</p>
     </div>
     <div class="col-3">
       <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" , placeholder: "タロウ"%>
     </div>
   </div>
    <div class="form-group row">
        <label class="col-lg-3">郵便番号(ハイフンなし)</label>
        <div class="col-lg-3">
          <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-3">住所</label>
        <div class="col-lg-3">
          <%= f.text_field :address, autofocus: true, autocomplete: "address"  %>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-3">電話番号(ハイフンなし)</label>
        <div class="col-lg-3">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-3">会員ステータス</label>
        <div>
          <%= f.radio_button :is_deleted, false %>有効
        </div>
        <div>
          <%= f.radio_button :is_deleted, true %>退会
        </div>
    </div>
    <div class="form-group row">
      <div class="actions col-lg-3">
        <%= f.submit "変更を保存" , class: "btn btn-success" %>
      </div>
    </div>
    <% end %>
</div>
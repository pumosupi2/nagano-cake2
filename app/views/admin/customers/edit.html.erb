<div class="container">
    <div class="row">
        <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
    </div>
    <%= form_with model:@customer, url: admin_customer_path(@customer), method: :patch do |f| %>
    
    <div class="row ml-3">
        <label class="col-lg-3">氏名</label>
        <div class="col-lg-3">
          (姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </div>
        <div class="col-lg-3">
          (名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>
   </div><br />
   <div class="row ml-3">
        <label class="col-lg-3">フリガナ</label>
        <div class="col-lg-3">
          (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana"  %>
        </div>
        <div class="col-lg-3">
          (メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </div>
   </div><br />
    <div class="row ml-3">
        <label class="col-lg-3">郵便番号(ハイフンなし)</label>
        <div class="col-lg-3">
          <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
        </div>
    </div><br />
    <div class="row ml-3">
        <label class="col-lg-3">住所</label>
        <div class="col-lg-3">
          <%= f.text_field :address, autofocus: true, autocomplete: "address"  %>
        </div>
    </div><br />
    <div class="row ml-3">
        <label class="col-lg-3">電話番号(ハイフンなし)</label>
        <div class="col-lg-3">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>
    </div><br />
    <div class="row ml-3">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
    </div><br />
    <div class="row ml-3">
        <label class="col-lg-3">会員ステータス</label>
        <div>
          <%= f.radio_button :is_deleted, false %>有効
        </div>
        <div>
          <%= f.radio_button :is_deleted, true %>退会
        </div>
    </div><br />
    <div class="row ml-3">
      <div class="actions col-lg-3">
        <%= f.submit "変更を保存" %>
      </div>
    </div>
    <% end %>
</div>
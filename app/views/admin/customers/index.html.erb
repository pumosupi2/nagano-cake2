<div class="container px-5 px-sm-0">
  <div class="row justify-content-center">
    <div class="col">
     <h2 class="mt-3">会員一覧</h2>
    </div>
  
  <table class='table table-hover table-inverse'>
  <thead>
    <tr>
     <th>会員ID</th>
     <th>氏名</th>
     <th>メールアドレス</th>
     <th>ステータス</th>
     <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
     <tr>
       <td><%= customer.id %></td>
       <td><%= link_to customer.full_name, admin_customer_path(customer) , class: "text-dark" %></td>
       <td><%= customer.email %></td>
       <td>
         <% if customer.is_deleted == false %>
          <p>有効</p>
         <% else %>
          <p>退会</p>
         <% end %>
       </td>
     </tr>
    <% end %>
  </tbody>
  </table>
 <%= paginate @customers %>
 </div>
</div>
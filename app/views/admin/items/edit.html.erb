<div class='container mt-5'>
  <div class='row pl-5 ml-5'>
    <h3>商品編集</h3></br>
  </div>
  <div class='row'>
    <div class='col'>
        <div class="form-group">
          <div class="row justify-content-center">
            
            <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
            
            <div class="form-group row">
              <label class="col-lg-5">商品画像</label>
              <div class="col-lg-5">
                <%= f.file_field :image, accept: 'image/*' %>
              </div>
            </div>
            
            <div class="form-group row">
              <label class="col-lg-5">商品名</label>
              <div class="col-lg-5">
                <%= f.text_field :name %>
              </div>
            </div>
            
            <div class="form-group row">
              <label class="col-lg-5">商品説明</label>
              <div class="col-lg-5">
                <%= f.text_area :introduction %>
              </div>
            </div>
            
            <div class="form-group row">
              <label class="col-lg-5">ジャンル</label>
              <div class="col-lg-5">
                <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: 'ジャンル選択' }, class: 'form-control' %>
              </div>
            </div>
            
            <div class="form-group row">
              <label class="col-lg-5">税抜価格</label>
              <div class="col-lg-7">
                <%= f.text_field :price %>円
              </div>
            </div>
            
            <div class="form-group row">
              <label class="col-lg-5">販売ステータス</label>
              <div class="col-lg-6">
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "販売中", value: :true %>
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active, "販売停止中", value: :false %>
              </div>
            </div>
            <div class="row justify-content-center">
              <%= f.submit '変更を保存', class: "btn btn-outline-success" %>
            </div>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
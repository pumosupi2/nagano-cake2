<div class="container">
  <h4>注文履歴一覧</h4>
  <div class="row justify-content-center">
    <table class="table">
      <tr>
        <th class="table-light">購入日時</th>
        <th class="table-light">購入者</th>
        <th class="table-light">注文個数</th>
      </tr>
     <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order.id), class: "text-dark text-decoration-none" %></td>
        <td><%= order.customer.full_name %></td>
        <td><%= order.total_amount %></td>
      </tr>
    <% end %>
    </table>
      <%= paginate @orders %>
  </div>
</div>


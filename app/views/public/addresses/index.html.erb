<div class='container mt-5'>
   <div class='row'>
     <h4>配送先登録/一覧</h4>
   </div>

   <%= form_with model: @address, url: addresses_path, local:true, method: :post  do |f| %>
   <br>
   <div class="form-group row">
     <div class="col-2">
        <%= f.label "郵便番号" %>
     </div>
     <div class="col-3">
        <%= f.text_field :delivery_post_code , placeholder: "0000000" %>
     </div>
   </div>

   <div class="form-group row">
     <div class="col-2">
       <%= f.label "住所" %>
     </div>
     <div class="col-8 text">
       <%= f.text_field :delivery_address , placeholder: "東京都渋谷区代々木", class: "col-8" %>
     </div>
   </div>

   <div class="form-group row">
     <div class="col-2">
       <%= f.label "宛名" %>
     </div>
     <div class="col-2">
       <%= f.text_field :delivery_address_name, placeholder: "令和道子" %>
     </div>
     <div class="col-3">
       <%= f.submit "新規登録",class: "btn btn-sm btn-success" %>
     </div>
   </div>
   <% end %>

  <br>
  <br>

  <div class='row'>
  <div class='col-6'>
  <table class='table'>
    <thead>
      <tr>
        <th width=100>郵便番号</th>
        <th width=200>住所</th>
        <th width=200>宛名</th>
        <th colspan="5"></th>
      </tr>
    </thead>
  <% @addresses.each do |address| %>
  <tbody>
      <tr>
        <td><%= address.delivery_post_code %></td>
        <td><%= address.delivery_address %></td>
        <td><%= address.delivery_address_name %></td>
        <td width=100><%= link_to '編集',edit_address_path(address.id), class: "btn btn-sm btn-success" %></td>
        <td width=100><%= link_to '削除',address_path(address.id), method: :delete,class: "btn btn-sm btn-danger" %></td>
      </tr>
   </tbody>
  <% end %>
  </table>
  </div>
</div>

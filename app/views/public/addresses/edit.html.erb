<div class='container mt-5'>
  <div class='row'>
    <h4>配送先</h4>
  </div>

  <%= form_with model: @address,local:true, url: address_path, method: :patch do |f| %>
  <br>
   <div class="form-group row">
    <div class="col-2">
      <%= f.label "郵便番号" %>
    </div>
    <div class="col-3">
      <%= f.text_field :delivery_post_code %>
    </div>
   </div>

   <div class="form-group row">
     <div class="col-2">
       <%= f.label "住所" %>
     </div>
     <div class="col-8 text">
       <%= f.text_field :delivery_address ,class: "col-8"%>
     </div>
   </div>

   <div class="form-group row">
     <div class="col-2">
       <%= f.label "宛名" %>
     </div>
     <div class="col-2">
       <%= f.text_field :delivery_address_name %>
     </div>
     <div class="col-3">
       <%= f.submit "変更を保存",class: "btn btn-success" %>
     </div>
   </div>
 <% end %>
</div>
<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-2'>
      <%= render 'genre', genres: @genres %>
    </div>
    <div class='col-10'>
      <h1>商品一覧</h1>
      <h3>(全<%= @items_all.count %>件)</h3></br>
        <div class="item-warp">
          <% @items.each do |item| %>
            <div class="warp">
              <%= link_to item_path(item.id) do %>
                <%= image_tag item.get_image(200,200) %></br>
              <% end %></br>
              <p class="sidb"><%= item.name %></p>
              <% if item.is_active %>
                <p class="text-success font-weight-bold">販売中</p>
              <% else %>
                <p class="text-danger font-weight-bold">売切れ</p>
              <% end %>
              <p class="sidb">¥<%= item.price.to_s(:delimited) %></p></br>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
<div class="row justify-content-center">
  <%= paginate @items %>
</div>
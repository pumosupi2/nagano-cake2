<div class='container'>
  <div class='row'>
    <div class='col'>
      <%= render 'genre', genres: @genres %>
    </div>
    <div class='col'>
      <h1>商品詳細</h1>
      <%= image_tag @item.get_image(400,300) %>
      <% if @item.is_active %>
        販売中
      <% else %>
        売切れ
      <% end %>
      <!--商品名-->
      <%= @item.name %></br>
      <!--商品説明-->
      <%= @item.introduction %></br>
      <!--価格-->
      ¥<%= @item.price %>(税込)</br>
    </div>
  </div>
</div>
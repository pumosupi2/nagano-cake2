<div class="container">
  <div class="row mb-5">
     <div class="col-10 max auto">
       <h2 class="mb-2">ログイン</h2>
       <h4 class="mt-5 mb-4">会員の方はこちらからログイン</h4>
       <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

       <div class="form-group row">
         <%= f.label :email, "メールアドレス" , class: "col-4" %>
        <div class="col-8 text">
         <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "col-8" %>
        </div>
       </div>

       <div class="form-group row">
        <%= f.label :password, "パスワード" , class: "col-4" %>
        <div class="col-8 text">
          <%= f.password_field :password, autocomplete: "current-password" , class: "col-8" %>
        </div>
       </div>

       <div class="form-group row">
         <div class="offset-4 col-2 text">
          <%= f.submit "ログイン",class: "btn btn-sm btn-primary" %>
         </div>
       </div>
       <% end %>
       <h4 class="mt-5">
        会員登録がお済でない方
       </h4>
       <p class="text-center">
        <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。
       </p>
   </div>
  </div>
</div>

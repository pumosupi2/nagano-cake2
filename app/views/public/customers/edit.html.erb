<div class="container mt-5">
  <div class="row">
    <h1>会員情報編集</h1>
  </div>
  <%= form_with model:@customer,url: customers_information_path, method: :patch do |f| %>
    <div class="form-group row">
     <div class="col-2">
       <%= f.label "氏名" %>
     </div>
     <div class="col-1 text-right">
       <p>(姓)</p>
     </div>
     <div class="col-3">
       <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" , placeholder: "山田" %>
     </div>
     <div class="col-1 text-right">
       <p>(名)</p>
     </div>
     <div class="col-3">
       <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" , placeholder: "太郎"%>
     </div>
    </div>
     
   <div class="form-group row">
     <div class="col-2">
       <%= f.label "フリガナ" %>
     </div>
     <div class="col-1 text-right text">
       <p>(セイ)</p>
     </div>
     <div class="col-3">
       <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" , placeholder: "ヤマダ" %>
     </div>
     <div class="col-1 text-right text">
       <p>(メイ)</p>
     </div>
     <div class="col-3">
       <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" , placeholder: "タロウ"%>
     </div>
   </div>
   
   <div class="form-group row">
        <label class="col-lg-3">郵便番号(ハイフンなし)</label>
        <div class="col-lg-3">
          <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
        </div>
   </div>
    
   <div class="form-group row">
        <label class="col-lg-3">住所</label>
        <div class="col-lg-3">
          <%= f.text_field :address, autofocus: true, autocomplete: "address"  %>
        </div>
   </div>
    
   <div class="form-group row">
        <label class="col-lg-3">電話番号(ハイフンなし)</label>
        <div class="col-lg-3">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>
   </div>
    
   <div class="form-group row">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
   </div>
   <div class="form-group row justify-content-center">
      <div class="col-2">
        <%= f.submit "編集内容を保存", class: "btn btn-outline-info" %>
      </div>
      <div class="col-2">
      <%= link_to "退会する" , customers_unsubscribe_path, class: "btn btn-outline-danger" %>
      </div>
    </div>
    
      
    <% end %>
  
</div>
<div class="container">
  <div class="row">
    <h2>会員情報</h2>
  </div>
  
  <%= form_with model:@customer,url: customers_information_path, method: :patch do |f| %>
  <div class="row ml-3">
        <label class="col-lg-3">名前</label>
        <div class="col-lg-3">
          (姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </div>
        <div class="col-lg-3">
          (名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>
   </div><br />
   <div class="row ml-3">
        <label class="col-lg-3">フリガナ</label>
        <div class="col-lg-3">
          (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana"  %>
        </div>
        <div class="col-lg-3">
          (メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </div>
   </div><br />
    <div class="row ml-3">
        <label class="col-lg-3">郵便番号(ハイフンなし)</label>
        <div class="col-lg-3">
          <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
        </div>
    </div><br />
    <div class="row ml-3">
        <label class="col-lg-3">住所</label>
        <div class="col-lg-3">
          <%= f.text_field :address, autofocus: true, autocomplete: "address"  %>
        </div>
    </div><br />
    <div class="row ml-3">
        <label class="col-lg-3">電話番号(ハイフンなし)</label>
        <div class="col-lg-3">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>
    </div><br />
    <div class="row ml-3">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
    </div><br />
    <div class="row ml-3">
      <div class="actions col-lg-3">
        <%= f.submit "編集内容を保存" %>
      </div>
    </div>
    <% end %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-5">
     <h2 class="mt-3">マイページ</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <h4 class="mt-3">登録情報</h4>
          <div class="col mt-3">
           <%= link_to "編集する",  customers_information_edit_path , class: "btn btn-sm btn-success" %>
          </div>
      </div>
    
       <table class="table table-hover table-inverse">
        <tr>
         <td>氏名</td>
         <td><%= @customer.full_name %></td>
        </tr>
        <tr>
         <td>カナ</td>
         <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
         <td>郵便番号</td>
         <td><%= @customer.post_code %></td>
        </tr>
        <tr>
         <td>住所</td>
         <td><%= @customer.address %></td>
        </tr>
        <tr>
         <td>電話番号</td>
         <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
         <td>メールアドレス</td>
         <td><%= @customer.email %></td>
        </tr>
       </table>
    </div>     
  </div>
    <div class="row">
      <h4>配送先</h4>
      <div class="col-3">
        <%= link_to "一覧を見る", addresses_path , class: "btn btn-info"%>
      </div>
      <h4>注文履歴</h4>
      <div class="col-3">
        <%= link_to "一覧を見る", '/orders', class: "btn btn-info" %>
      </div>
    </div>
</div>
